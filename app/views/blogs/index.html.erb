<div class="container">
  <h1>Блоги</h1>
  <p><%= link_to "Создать пост", new_blog_path %></p>
  <div class="row">
    <% @blogs.each do |blog| %>
    <div class="col-md-4">
      <div class="card mt-3">
        <div class="card-header">
          <h3><%= link_to blog.title, blog_path(blog.id) %></h3>
        </div>
        <div class="card-body">
          <%= link_to "Открыть", blog_path(blog.id), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>
