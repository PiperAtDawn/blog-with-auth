<div class="container">
  <div class="card">
    <div class="card-header">
      <h3><%= @blog.title %></h3>
    </div>
    <div class="card-body">
      <p><%= @blog.content %></p>
    </div>
  </div>
  <%= link_to "Редактировать", edit_blog_path(@blog.id), class: 'btn btn-primary' %>
  <%= link_to "Удалить", blog_path(@blog.id), method: :delete, class: 'btn btn-danger' %>
  <%= link_to "Назад", blogs_path, class: 'btn btn-secondary' %>
</div>