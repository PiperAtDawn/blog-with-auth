<div class="flex-row d-flex justify-content-center">

  <div class="col-md-8">
    <div class="card mt-5">
      <div class="card-body">
        <%= form_for @blog do |f| %>
  
        <div class="form-group">
          <%= f.label "Заголовок" %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label "Содержимое" %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
  
        <%= f.submit "Создать пост", class: 'btn btn-outline-primary' %>
        <%= link_to "Назад", blogs_path, class: 'btn btn-outline-secondary' %>
      <% end %>
      </div>
    </div>
  </div>

</div>

